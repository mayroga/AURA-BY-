import sqlite3

def init_db():
    conn = sqlite3.connect('aura_brain.db')
    cursor = conn.cursor()
    # Estructura optimizada para comparativa geográfica y tipo de pago
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS prices (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            description TEXT NOT NULL,
            cpt_cdt_code TEXT,
            cash_price REAL NOT NULL,
            estimated_insurance_price REAL,
            state TEXT NOT NULL,
            county TEXT,
            zip_code TEXT NOT NULL,
            category TEXT, -- 'Dental', 'Medical', 'Equipment'
            is_premium INTEGER DEFAULT 0, -- 1 para opción lujo, 0 estándar
            source TEXT DEFAULT 'Official Market Data',
            updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
        )
    ''')
    conn.commit()
    conn.close()
    print("✅ Base de datos AURA_BRAIN configurada con éxito.")

if __name__ == "__main__":
    init_db()
